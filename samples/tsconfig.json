{
    "compilerOptions": {
        "downlevelIteration": true,
        "sourceMap": false,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": false,
        "stripInternal": true,
        "baseUrl": "../",
        "module": "none",
        "moduleResolution": "node",
        "target": "ES2022",
        "lib": [
            "dom",
            "es5"
        ],
        "paths": {
            "highcharts": ["code/highcharts"],
            "highcharts/*": ["code/*"],
            "@highcharts/dashboards": ["code/dashboards/dashboards"],
            "@highcharts/dashboards/*": ["code/dashboards/dashboards/*"]
        },
        "types": [
            // disable node types
        ]
    },
    "files": [
        "tsglobal.d.ts",
    ],
    "include": [
        "gantt/**/*.ts",
        "highcharts/**/*.ts",
        "maps/**/*.ts",
        "stock/**/*.ts",
        "unit-tests/**/*.ts"
    ]
}
