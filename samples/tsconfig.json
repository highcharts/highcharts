{
    "compilerOptions": {
        "downlevelIteration": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": false,
        "stripInternal": true,
        "baseUrl": "../",
        "module": "none",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "dom",
            "es5"
        ],
        "types": [
            // disable node types
        ]
    },
    "files": [
        "tsglobal.d.ts",
    ],
    "include": [
        "unit-tests/**/*.ts"
    ]
}
