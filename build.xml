                            <param name="s3cmdDir" value="${s3cmd.dir}"/>
                        </antcall>
                    </else>
                </ac:if>
            </sequential>
        </ac:for>
        <!-- delete dir="${basedir}/build/dist/highcharts/js-gzip"/ -->
    </target>

