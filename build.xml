            <param name="local" value="${src.versions.dir}/"/>
            <param name="remote" value="${amazon.s3.bucketname}"/>
            <param name="s3cmdDir" value="${s3cmd.dir}"/>
            <param name="http.expires" value="${http.expires.one.month}"/>
