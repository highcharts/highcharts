{
    "compilerOptions": {
        "esModuleInterop": false,
        "noEmit": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "baseUrl": "../../",
        "module": "umd",
        "moduleResolution": "node",
        "rootDir": "../../",
        "lib": ["es5", "dom"],
        "paths": {
            "highcharts": ["code/highcharts"],
            "highcharts/*": ["code/*"],
            "@highcharts/dashboards": ["code/dashboards/dashboards"],
            "@highcharts/dashboards/*": ["code/dashboards/dashboards/*"]
        },
        "types": []
    },
    "exclude": [
        "../../node_modules"
    ]
}
