{
    "compilerOptions": {
        "typeRoots": ["./globals.d.ts", "../node_modules/@types"],
        "module": "nodenext",
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"],
            "~code/*": ["../code/*"],
            "~ts/*": ["../ts/*"]
        }
    },
    "include": ["./**/*.ts", "./**/*.mts", "./**/*.js"]
}
